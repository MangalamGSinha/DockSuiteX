# Core files
include README.md
include LICENSE
include pyproject.toml
include requirements.txt

# Include Source
recursive-include docksuitex *
recursive-include streamlit_app *
recursive-include examples *

# Exclude bin directory contents (binaries are downloaded at runtime)
recursive-exclude docksuitex/bin *

# Include bin directory placeholder
include docksuitex/bin/.keep

# Global excludes
global-exclude __pycache__/*
global-exclude *.py[cod]
global-exclude *.pyd
global-exclude .git*
global-exclude .DS_Store

# Prune directories
prune tests
prune docs
prune site
prune notebooks
prune build
prune dist
prune build_env
prune *.egg-info
prune .github
prune docksuitex/temp
prune temp
